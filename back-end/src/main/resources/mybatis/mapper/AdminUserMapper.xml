<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace=绑定一个对应的Dao/Mapper接口-->
<mapper namespace="nuc.ss.mapper.AdminUserMapper">

    <select id="queryUserList" resultType="AdminUser">
        select * from databaselab.adminuser;
    </select>

    <select id="queryUserByName" resultType="AdminUser">
        select * from databaselab.adminuser where name = #{name};
    </select>

    <select id="queryUserById" resultType="AdminUser">
        select * from databaselab.adminuser where id = #{id};
    </select>

    <insert id="addUser" parameterType="AdminUser">
        insert into databaselab.adminuser (id, role, name, roleId,password) values (#{id},#{role},#{name},#{roleId},#{password});
    </insert>

    <update id="updateUser" parameterType="AdminUser">
        update databaselab.adminuser set name=#{name},password = #{password} where id = #{id};
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from databaselab.adminuser where id = #{id}
    </delete>
</mapper>
